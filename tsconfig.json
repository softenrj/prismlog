{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,

    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },

    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}